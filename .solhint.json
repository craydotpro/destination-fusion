{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": [
      "error",
      "^0.8.17"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-empty-blocks": "warn",
    "no-unused-vars": "warn",
    "max-line-length": [
      "warn",
      100
    ]
  }
}